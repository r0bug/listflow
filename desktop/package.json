{
  "name": "consoleebay-desktop",
  "version": "1.0.0",
  "description": "ConsoleEbay Desktop Dashboard and Workstation",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.consoleebay.desktop",
    "productName": "ConsoleEbay Dashboard",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
